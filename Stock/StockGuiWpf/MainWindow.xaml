<Window x:Class="StockGuiWpf.MainWindow"
		x:Name="uxMainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Height="840"
		Width="185"
		DataContext="{Binding RelativeSource={RelativeSource Self}}"
		xmlns:l="clr-namespace:StockGuiWpf.Infrastructure"
		Loaded="uxMainWindow_Loaded">
	<Window.Resources>
		<Style TargetType="TextBlock" x:Key="myStyle">
			<Setter Property="FontSize" Value="14" />
			<Setter Property="HorizontalAlignment" Value="Center" />
			<Setter Property="FontFamily" Value="Comic Sans MS"/>
			<Setter Property="Foreground" Value="White" />
			
		</Style>
		<l:StringToColorConverter x:Key="myConverter" />
		<Style TargetType="TextBlock" x:Key="myStyleTBlox" BasedOn="{StaticResource ResourceKey=myStyle}">
			<Setter Property="FontSize" Value="10" 
					/>
			
		</Style>
		<Style TargetType="TextBlock" x:Key="myStyleTBloxEx"
			   BasedOn="{StaticResource ResourceKey=myStyleTBlox}">
			<Setter Property="Foreground" Value="{Binding RateChange, Converter={StaticResource ResourceKey=myConverter}}" />
			
		</Style>
	</Window.Resources>


	<DockPanel LastChildFill="True" Background="Black" >
		<StackPanel Orientation="Horizontal" >
			<ListBox ItemsSource="{Binding ItemsWrapper}" Background="Black">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Vertical">
							<TextBlock Text="{Binding Rate}" 
									   Style="{StaticResource ResourceKey=myStyle}"
									   >
							</TextBlock>
							<StackPanel Orientation="Horizontal">
								<Border Padding="2" >
									<TextBlock  Text="{Binding RateChange}" 
										  Style="{StaticResource ResourceKey=myStyleTBloxEx}">
										  <!--Foreground="{Binding RateChange, Converter={StaticResource ResourceKey=myConverter}}" >-->

									</TextBlock>
</Border>
								<Border Padding="2" >
									<TextBlock Text="{Binding RateDate}" 
										  Style="{StaticResource ResourceKey=myStyleTBlox}" />
								</Border>
							</StackPanel>
							<!--<TextBox Text="Jestem" Foreground="White" Background="Blue">
								<TextBox.Template>
									<ControlTemplate>
										<Border Background="White"  />
									</ControlTemplate>
								</TextBox.Template>
							</TextBox>-->
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</StackPanel>
	</DockPanel>
</Window>
